<h1>Edit <%= @wine.name %> </h1>


<form method="POST" action="/wines/<%= @wine.id %>">
  <p> Wine Name/Grape: <%= @wine.name%> </p>
  <p> Vineyard: <%= @wine.vineyard%> </p>
  <p> Year: <%= @wine.year%> </p>

  <input id="hidden" type="hidden" name="_method" value="patch">
    <label for="rating"> Rating: </label>
    <input type="text" name="wine[rating]" id="name" value="<% @wine.rating %>"><br><br>
    <label> Tasting Notes: </label>
    <input type="textarea" name="wine[tasting_notes]" id="tasting_notes" value="<%= @wine.tasting_notes %>"><br><br>
    <br></br>
    <input type="submit" name="Edit Wine" value="Submit">
  </form>











